<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/fragment_chat_list">

    <fragment
        android:id="@+id/fragment_chat_list"
        android:name="com.xently.holla.ui.chat.list.ChatListFragment"
        android:label="@string/app_name"
        tools:layout="@layout/chat_list_fragment">
        <action
            android:id="@+id/action_fragment_chart_list_to_chatFragment"
            app:destination="@id/fragment_chat" />
        <action
            android:id="@+id/action_fragment_chart_list_to_profileFragment"
            app:destination="@id/fragment_profile" />
    </fragment>
    <fragment
        android:id="@+id/fragment_chat"
        android:name="com.xently.holla.ui.chat.ChatFragment"
        tools:layout="@layout/chat_fragment">
        <action
            android:id="@+id/action_chatFragment_to_profileFragment"
            app:destination="@id/fragment_profile" />
        <argument
            android:name="argsChat"
            app:argType="com.xently.holla.data.model.Chat"
            app:nullable="true" />
    </fragment>
    <fragment
        android:id="@+id/fragment_profile"
        android:name="com.xently.holla.ui.user.profile.ProfileFragment"
        android:label="Account Profile"
        tools:layout="@layout/profile_fragment" />
</navigation>